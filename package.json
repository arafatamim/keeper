{
  "name": "keeper",
  "productName": "Keeper",
  "version": "1.0.0",
  "description": "Desktop wrapper for Google Keep built with Electron",
  "files": [
    "*.js",
    "assets"
  ],
  "scripts": {
    "start": "electron .",
    "postinstall": "install-app-deps",
    "pack": "build --dir",
    "dist": "build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arafatamim/keeper"
  },
  "keywords": [
    "electron",
    "google",
    "keep"
  ],
  "author": "Tamim Arafat <tamim.arafat@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/arafatamim/keeper",
  "dependencies": {
    "electron-config": "^1.0.0"
  },
  "devDependencies": {
    "electron": "^1.4.4",
    "electron-builder": "^20.15.1",
    "standard": "^10.0.3"
  },
  "build": {
    "appId": "com.arafatamim.keeper",
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/icon.png",
      "category": "Network;Utility"
    },
    "win": {
      "target": "squirrel",
      "icon": "assets/icon.ico"
    },
    "mac":{
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns"
    }
  }
}
